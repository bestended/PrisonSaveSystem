@model core.Model.PrisonBlock
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-4 rounded rounded-3 p-4">
            <h3 class="text-info p-2 m-1 text-center">Add PrisonBlock</h3>
            <form method="post" asp-action="Create">
                <div class="form-check">
                    <label asp-for="BlockName"></label>
                    <input type="text" asp-for="BlockName" class="form-control" placeholder="Enter Block Name" />

                </div>
                <div class="form-check">
                    <label asp-for="BlockDirection"></label>
                    <input type="text" asp-for="BlockDirection" class="form-control" placeholder="Enter Block Direction" />

                </div>
               

                <div class="form-check">

                    <div>
                        <input type="submit" class="btn btn-sm btn-primary m-2 p-2 float-end" value="Save" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

